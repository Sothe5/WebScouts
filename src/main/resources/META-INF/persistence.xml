  <persistence-unit name="uma.sii.mcaddss.WebScouts.jar_PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>uma.sii.mcaddss.webscouts.Comment</class>
    <class>uma.sii.mcaddss.webscouts.Event</class>
    <class>uma.sii.mcaddss.webscouts.Fee</class>
